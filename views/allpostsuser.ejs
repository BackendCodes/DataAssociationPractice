<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts | Hipost</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-gray-50 flex flex-col min-h-screen">
    <!-- Navbar -->
    <nav class="bg-white shadow-md py-4">
      <div class="container mx-auto px-6 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold text-blue-600">Hipost</a>
        <div class="space-x-6 flex items-center">
          <a href="/updateimg">
            <img
            class="w-16 h-16 rounded-full object-cover"
            src="/uploads/<%= profilepic %>"
            alt=""
          />
          </a>
          <a
            href="/create"
            class="text-gray-700 hover:text-blue-600 font-medium"
            >Create Post</a
          >
          <a
            href="/logout"
            class="text-gray-700 hover:text-blue-600 font-medium"
            >All Post</a
          >
          <a
            href="/logout"
            class="text-gray-700 hover:text-blue-600 font-medium"
            >Logout</a
          >
        </div>
      </div>
    </nav>

    <!-- Posts Section -->
    <section class="flex-grow py-12 px-6">
      <div class="container mx-auto max-w-4xl">
        <!-- Header -->
        <div class="text-center mb-10">
          <h1 class="text-4xl font-extrabold text-blue-600 mb-3">All Posts</h1>
          <p class="text-gray-600">
            Showing posts by
            <span class="font-semibold text-gray-800"><%= name %></span>
          </p>
        </div>

        <!-- Posts List -->
        <!-- Posts List -->
        <div class="grid gap-6">
          <% if (allpost.length > 0) { %> <% allpost.forEach(item => { %>
          <div
            class="bg-white p-6 rounded-xl shadow-md border border-gray-100 hover:shadow-lg transition"
          >
            <h2 class="text-2xl font-semibold text-blue-700 mb-2">
              <%= item.title %>
            </h2>
            <p class="text-gray-600 mb-4"><%= item.content %></p>
            <div class="flex justify-between text-sm text-gray-500">
              <span>
                By
                <span class="font-medium text-gray-800">
                  <%= name.split(' ')[0] + " " + (name.split(' ')[2] || '') %>
                </span>
              </span>
              <span>
                Posted on <%= new
                Date(item.createdAt).toLocaleDateString("en-US", { month:
                "short", day: "numeric", year: "numeric" }) %>
              </span>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p>No posts yet</p>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-200 py-6 mt-auto">
      <div class="container mx-auto px-6 text-center">
        <p class="text-sm">
          &copy; <%= new Date().getFullYear() %> Hipost. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
